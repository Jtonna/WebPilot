{
  "manifest_version": 3,
  "name": "WebPilot",
  "version": "0.2.0",
  "description": "Browser control via MCP for AI agents",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "tabGroups",
    "debugger",
    "scripting",
    "webNavigation",
    "windows"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
